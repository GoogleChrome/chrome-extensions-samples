{
  "name": "Downloads API Demo",
  "version": "1.0",
  "description": "Demonstrates the chrome.downloads API to download files, monitor progress, and manage downloads.",
  "manifest_version": 3,
  "permissions": [
    "downloads",
    "downloads.open",
    "downloads.shelf"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
