{
  "name": "Download Selected Links",
  "description": "Select links on a page and download them.",
  "version": "0.3",
  "minimum_chrome_version": "16.0.884",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting"     
  ],
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["send_links.js"]      
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}