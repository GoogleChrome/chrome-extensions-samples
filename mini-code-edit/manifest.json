{
  "name": "MiniCodeEdit",
  "version": "0.1.10",
  "manifest_version": 2,
  "description": "A very small code editor.",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    "experimental",
    "fileBrowserHandler",
    "fileSystem",
    "unlimitedStorage"
  ],

  "icons": {
    "16":  "img/16x16/file_edit.png",
    "32":  "img/32x32/file_edit.png",
    "64":  "img/64x64/file_edit.png",
    "128": "img/128x128/file_edit.png"
  }
}
