{
  "name": "Fake Archive Handler App",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Demonstrate File System Provider API usage for apps.",
  "permissions": [
    "fileSystemProvider",
    {"fileSystem": ["retainEntries"]},
    "storage"
  ],
  "file_handlers": {
    "fake": {
      "types": ["application/fake"],
      "extensions": ["fake"]
    }
  },
  "file_system_provider_capabilities": {
    "multiple_mounts": true,
    "source": "file"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}
